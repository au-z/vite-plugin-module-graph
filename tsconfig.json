{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "dist/types",
    "baseUrl": ".",
    "esModuleInterop": true,
    "sourceMap": true,
    "paths": {
      "@src/*": ["src/*"],
      "@style/*": ["style/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/stories"]
}
